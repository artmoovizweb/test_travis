{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="mb-5">User</h1>

    <div class="container">
        <div class="row">
        <div class="col-3">
            {% if user.image %}
                {% if user.image starts with 'http' %}
                    <img src="{{ user.image }}" class="img-fluid rounded-circle" />
                {% else %}
                    <img src="/assets/uploads/user_profile/{{ user.image }}" class="img-fluid rounded-circle" />
                {% endif %}
            {% else %}
                <img src="/assets/img/user.png" class="img-fluid rounded-circle" />
            {% endif %}
        </div>
        <div class="col-6">
            <a href="/user/{{ user.id }}/edit"><i class="fas fa-user-edit"></i> Edit</a>

            <table class="table table-hover mt-3">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <!-- <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr> -->
                    <tr>
                        <th>Lastname</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Birthday</th>
                        <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ user.address }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                    <tr>
                        <th>Drivers_licence</th>
                        <td>{{ user.driversLicence }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('user_index') }}">Back to list</a>
    <a> | </a>
    <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
