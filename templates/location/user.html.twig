{% extends 'base.html.twig' %}

{% block title %}Locations{% endblock %}

{% block body %}
    <h1 class="mb-5">Locations</h1>

<div class="container">
    <table id="datatableLocation" class="table table-striped table-hover table-responsive cell-border">
        <thead>
            <tr>
                <th>Start</th>
                <th>End</th>
                <th>Vehicule</th>
                <th>Contrat</th>
                <th>Kilometers</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for location in locations %}
                <tr>
                    <td>{{ location.start ? location.start|date('d-m-Y H:i:s') : '' }}</td>
                    <td>{{ location.end ? location.end|date('d-m-Y H:i:s') : '' }}</td>
                    <td>{{ location.vehicule.serialNumber }}</td>
                    <td>{{ location.contrat.name }}</td>
                    <td>{{ location.kilometers }}</td>
                    <td>{{ location.vehicule.ville.name }}</td>
                    <td>
                        <a href="{{ path('location_show', {'id': location.id}) }}">Voir d√©tails</a>
                        |
                        <a href="{{ path('facture_pdftest', {'id': location.getFactures|last.id}) }}">Voir PDF</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
